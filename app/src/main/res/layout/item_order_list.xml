<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/item_bg">


    <ImageView
        android:id="@+id/id_iv_image"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/item_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/id_iv_image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小慕餐厅"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/id_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="小慕餐厅小慕餐厅小慕餐厅小慕餐厅小慕餐厅小慕餐厅小慕餐厅小慕餐厅小慕餐厅小慕餐厅"
            android:maxLines="2"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_iv_image"
        android:layout_toRightOf="@+id/id_iv_image"
        android:text="30元"
        android:layout_marginLeft="8dp"
        android:textColor="#FD8F50"/>

</RelativeLayout>